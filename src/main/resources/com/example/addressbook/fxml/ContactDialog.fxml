<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="450.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.addressbook.controller.ContactDialogController">
    <children>
        <GridPane hgap="10.0" vgap="10.0" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Имя*:" GridPane.rowIndex="0" />
                <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="Фамилия:" GridPane.rowIndex="1" />
                <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Телефон:" GridPane.rowIndex="2" />
                <TextField fx:id="phoneNumberField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Email:" GridPane.rowIndex="3" />
                <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Label text="Адрес:" GridPane.rowIndex="4" />
                <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <Label text="Компания:" GridPane.rowIndex="5" />
                <TextField fx:id="companyField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                <Label text="Дата рождения:" GridPane.rowIndex="6" />
                <DatePicker fx:id="birthDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="6" prefWidth="350.0"/>
                <Label text="Заметки:" GridPane.rowIndex="7" />
                <TextArea fx:id="notesArea" prefHeight="80.0" GridPane.columnIndex="1" GridPane.rowIndex="7" />
            </children>
        </GridPane>
        <HBox layoutX="240.0" layoutY="350.0" spacing="10.0" AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <children>
                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" text="Сохранить" defaultButton="true"/>
                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" text="Отмена" cancelButton="true"/>
            </children>
        </HBox>
    </children>
</AnchorPane>

